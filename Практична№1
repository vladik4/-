#include <stdio.h>

int main() {
    int t1, t2, t3;
    float total_time;

    // Введення значень
    printf("Введіть три  значення: ");
    scanf("%d %d %d", &t1, &t2, &t3);

    // Обчислення загального часу
    total_time = 1.0 / t1 + 1.0 / t2 + 1.0 / t3;

    // Виведення результату
    printf("Час необхідний для зїдання пирога: %.2f годин\n", 1 / total_time);

    return 0;
}
